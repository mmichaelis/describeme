<project
    xmlns="http://maven.apache.org/DECORATION/1.6.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/DECORATION/1.6.0 http://maven.apache.org/xsd/decoration-1.6.0.xsd"
    name="DescribeMe">

  <bannerLeft>
    <name><![CDATA[
      <span class="color-highlight">Describe</span>Me
      ]]>
    </name>
    <href>http://mmichaelis.github.io/describeme/</href>
  </bannerLeft>

  <publishDate position="bottom" format="yyyy-MM-dd" />
  <version position="bottom" />

  <skin>
    <!--
    See http://andriusvelykis.github.io/reflow-maven-skin/
    -->
    <groupId>lt.velykis.maven.skins</groupId>
    <artifactId>reflow-maven-skin</artifactId>
    <version>1.1.1</version>
  </skin>

  <custom>
    <reflowSkin>
      <!-- Make this to 'false' for local development, i.e. file:// URLs -->
      <protocolRelativeURLs>true</protocolRelativeURLs>
      <smoothScroll>true</smoothScroll>
      <!--
        For Reflow 1.1.1 have a look here:
        https://bootswatch.com/2/
      -->
      <theme>bootswatch-flatly</theme>
      <highlightJs>true</highlightJs>
      <highlightJsTheme>github</highlightJsTheme>
      <brand>
        <name>
          <![CDATA[
          <span class="color-highlight">Describe</span>Me
          ]]>
        </name>
        <href>http://mmichaelis.github.io/describeme/</href>
      </brand>
      <slogan>Extensible strategies for describing Java objects</slogan>
      <titleTemplate>%2$s | %1$s</titleTemplate>
      <!-- Use Table of Contents at the top of the page (max 6 elements) -->
      <toc>top</toc>
      <tocTopMax>6</tocTopMax>
      <!-- Include the documentation and tools in the top navigation (in addition to links) -->
      <topNav>Documentation|Tools|Contribute|reports|modules</topNav>
      <!-- Split menus in the bottom navigation -->
      <bottomNav maxSpan="9" >
        <column>Main|modules|Tools</column>
        <column>Download|Contribute</column>
        <column>Documentation</column>
        <column>reports</column>
      </bottomNav>
      <bottomDescription>
        <![CDATA[
          <span class="color-highlight">Describe</span>Me is a Java library
          which allows to easily describe your Java objects. It is especially
          meant for describing your objects in logging and test context when
          presenting expected and actual values.
        ]]>
      </bottomDescription>
      <pages>
        <index project="describeme">
          <!-- Override the title -->
          <titleTemplate>DescribeMe - Extensible strategies for describing Java objects</titleTemplate>
          <!-- no breadcrumbs on the main index page -->
          <breadcrumbs>false</breadcrumbs>
          <!-- no ToC on the main index page -->
          <toc>false</toc>
          <markPageHeader>false</markPageHeader>
          <sections>
            <columns>2</columns>
            <body />
            <sidebar />
          </sections>
        </index>
        <contribute>
          <breadcrumbs>false</breadcrumbs>
        </contribute>
        <!-- Disable source highlighting for Maven reports -->
        <source-repository>
          <highlightJs>false</highlightJs>
        </source-repository>
        <issue-tracking>
          <highlightJs>false</highlightJs>
          <toc>false</toc>
        </issue-tracking>
        <license>
          <highlightJs>false</highlightJs>
          <toc>false</toc>
        </license>
        <!-- Disable ToC for some Maven reports -->
        <project-info>
          <toc>false</toc>
        </project-info>
        <github-report>
          <toc>false</toc>
        </github-report>
        <dependencies>
          <tocTopMax>4</tocTopMax>
        </dependencies>
        <pmd>
          <tocTopMax>2</tocTopMax>
        </pmd>
        <plugin-updates-report>
          <tocTopMax>4</tocTopMax>
        </plugin-updates-report>
        <dependency-updates-report>
          <tocTopMax>4</tocTopMax>
        </dependency-updates-report>
      </pages>
    </reflowSkin>
  </custom>

  <body>
    <!-- Add a rel to Google profile for all pages -->
    <head>
      <link rel="author" href="https://about.me/michaelismark"/>
    </head>

    <links>
      <item name="Download" href="skin/index.html#Usage" />
      <item name="GitHub project" href="https://github.com/mmichaelis/describeme" />
    </links>

    <breadcrumbs>
      <item name="DescribeMe" href="/" />
    </breadcrumbs>

    <menu name="Main" inherit="top">
      <item name="Home" href="./" />
      <item name="GitHub project" href="https://github.com/mmichaelis/describeme" />
      <item name="Blog" href="http://thragor.blogspot.de/" />
      <item name="Release notes" href="release-notes.html" />
    </menu>
    <menu name="Modules" ref="modules" inherit="bottom"/>
    <menu name="Download" inherit="top">
      <item name="License" href="license.html" />
    </menu>
    <menu name="Documentation" inherit="bottom">
      <item name="Development" href="development.html" />
      <item name="References" href="references.html" />
    </menu>
    <menu name="Contribute" inherit="bottom">
      <item name="Issues" href="https://github.com/mmichaelis/describeme/issues" />
      <item name="Fork on GitHub" href="https://github.com/mmichaelis/describeme" />
    </menu>
    <menu name="Maven documentation" ref="reports" inherit="bottom"/>
  </body>
</project>
